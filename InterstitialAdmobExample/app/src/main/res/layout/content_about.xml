<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.groundtruth.sdk.displaysdk.demo.interstitial.customevent.dfp.AboutActivity">

    <TextView
        android:id="@+id/about_title"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_text_margin"
        android:gravity="center_horizontal"
        android:text="@string/about_title"
        android:textSize="@dimen/about_title_size"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/about_version"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_text_margin"
        android:gravity="center_horizontal"
        android:textSize="@dimen/about_version_size"
        app:layout_constraintTop_toBottomOf="@+id/about_title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/copyright"
        android:textSize="@dimen/about_copyright_size"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>