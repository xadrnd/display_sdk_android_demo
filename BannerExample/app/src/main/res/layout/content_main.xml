<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.groundtruth.sdk.displaysdk.demo.MainActivity"
    tools:showIn="@layout/activity_base">

    <com.xad.sdk.BannerView
        xmlns:gt="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        gt:layout_constraintVertical_bias="0.0"
        gt:layout_constraintLeft_toLeftOf="parent"
        gt:layout_constraintRight_toRightOf="parent"
        gt:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/banner_top_margin"
        android:id="@+id/banner_view"
        gt:AdSize="BANNER"
        gt:AdInterval="Medium"/>
</android.support.constraint.ConstraintLayout>
